# Allow hal_power_default to write to dt2w nodes
allow hal_power_default input_device:dir r_dir_perms;
allow hal_power_default input_device:chr_file rw_file_perms;
allow hal_power_default touchfeature_device:chr_file rw_file_perms;
allow hal_power_default proc_walt:file rw_file_perms;
allow hal_power_default proc_walt:dir search;

# Power HAL needs access to CPU DMA latency
allow hal_power_default vendor_latency_device:chr_file rw_file_perms;

# Power HAL boost permissions  
allow hal_power_default sysfs_devices_system_cpu:file rw_file_perms;
allow hal_power_default sysfs_devices_system_cpu:dir search;

r_dir_file(hal_power_default, input_device)

allow hal_power_default {
  cgroup
  proc
}:{
  file
  lnk_file
} rw_file_perms;
