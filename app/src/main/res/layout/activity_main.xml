<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/viewFinder"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/lensControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/btnCapture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnUW"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="0.6"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMain"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="1.0"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/btnCaptureOuter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/btnCapture"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@android:drawable/presence_online"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/btnCaptureOuter"
        app:layout_constraintBottom_toBottomOf="@id/btnCaptureOuter"
        app:layout_constraintLeft_toLeftOf="@id/btnCaptureOuter"
        app:layout_constraintRight_toRightOf="@id/btnCaptureOuter" />

</androidx.constraintlayout.widget.ConstraintLayout>
