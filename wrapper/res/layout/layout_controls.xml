<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Zoom Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnWide"
            android:text="0.6"
            android:background="@drawable/bg_zoom_button"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <Button
            android:id="@+id/btnNormal"
            android:text="1x"
            android:background="@drawable/bg_zoom_button_active"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- Shutter -->
    <FrameLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_shutter_outer">

        <View
            android:id="@+id/btnShutter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_shutter_inner"
            android:onClick="takePicture"/>
    </FrameLayout>

</FrameLayout>
