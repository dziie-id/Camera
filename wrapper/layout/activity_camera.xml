<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- CAMERA PREVIEW (Surface / Texture) -->
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- WATERMARK -->
    <include
        layout="@layout/watermark_text"
        android:id="@+id/watermark_overlay" />

    <!-- ZOOM BAR -->
    <include
        layout="@layout/layout_zoom_bar"
        android:id="@+id/zoom_bar_overlay"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="96dp" />

    <!-- SHUTTER BUTTON -->
    <include
        layout="@layout/layout_shutter"
        android:id="@+id/shutter_overlay" />

</FrameLayout>
